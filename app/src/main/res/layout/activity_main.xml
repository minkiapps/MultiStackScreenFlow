<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/contentActivityMain"/>

    <at.willhaben.multiscreenflow.StackVisualizerView android:layout_width="match_parent" android:layout_height="300dp"
                                                      android:id="@+id/stackVisualizerMainActivity"
                                                      app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="56dp"
                  android:elevation="10dp"
                  android:background="#eeeeee"
                  android:layout_gravity="bottom"
                  android:id="@+id/linearLayout"
                  app:layout_constraintBottom_toBottomOf="@+id/contentActivityMain">

        <androidx.appcompat.widget.AppCompatImageView android:layout_width="0dp" android:layout_height="match_parent"
                                                      android:id="@+id/menuFeedActivityMain"
                                                      android:background="?android:selectableItemBackgroundBorderless"
                                                      android:padding="12dp"
                                                      app:srcCompat="@drawable/ic_home_black_24dp"
                                                      android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView android:layout_width="0dp" android:layout_height="match_parent"
                                                      android:id="@+id/menuSearchActivityMain"
                                                      android:background="?android:selectableItemBackgroundBorderless"
                                                      android:padding="12dp"
                                                      app:srcCompat="@drawable/ic_search_black_24dp"
                                                      android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView android:layout_width="0dp" android:layout_height="match_parent"
                                                      android:id="@+id/menuAzaActivityMain"
                                                      android:background="?android:selectableItemBackgroundBorderless"
                                                      android:padding="12dp"
                                                      app:srcCompat="@drawable/ic_add_black_24dp"
                                                      android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView android:layout_width="0dp" android:layout_height="match_parent"
                                                      android:id="@+id/menuChatActivityMain"
                                                      android:background="?android:selectableItemBackgroundBorderless"
                                                      android:padding="12dp"
                                                      app:srcCompat="@drawable/ic_message_black_24dp"
                                                      android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatImageView android:layout_width="0dp" android:layout_height="match_parent"
                                                      android:id="@+id/menuProfileActivityMain"
                                                      android:background="?android:selectableItemBackgroundBorderless"
                                                      android:padding="12dp"
                                                      app:srcCompat="@drawable/ic_account_circle_black_24dp"
                                                      android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>